
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MainActivity theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TOOL BAR ****************************************************************************** -->

    <!-- Popup of ToolBar theme. -->
    <style name="PopupToolBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/colorPrimaryLight</item>
    </style>

    <!-- VIEW ********************************************************************************** -->

    <!-- Separator View style. -->
    <style name="SeparatorView" parent="@style/TextAppearance.AppCompat">
        <item name="android:background">@drawable/separator</item>
    </style>

    <!-- TEXT VIEW ***************************************************************************** -->

    <!-- Title Item of RecyclerView style. -->
    <style name="TitleItem" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_item</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Sub Title Item of RecyclerView style. -->
    <style name="SubTitleItem" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_sub_item</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Title style. -->
    <style name="Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <!-- Basic Text style. -->
    <style name="BasicText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_basic_text</item>
    </style>

    <!-- BUTTON ******************************************************************************** -->

    <!-- Filled Button style. -->
    <style name="FilledButton" parent="@style/TextAppearance.AppCompat">
        <item name="android:background">@drawable/extended_fab</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:elevation">@dimen/elevation_fab</item>
    </style>

    <!-- Basic Button style. -->
    <style name="BasicButton" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- SPINNER ******************************************************************************* -->

    <!-- Spinner style. -->
    <style name="Spinner" parent="@style/TextAppearance.AppCompat">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:padding">@dimen/padding_little</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation">@dimen/elevation_fab</item>
    </style>

</resources>
